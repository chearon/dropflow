{
  "devDependencies": {
    "@codemirror/lang-html": "^6.4.8",
    "@codemirror/state": "^6.4.1",
    "@ddietr/codemirror-themes": "^1.4.2",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^20.17.10",
    "canvas": "^3.1.0",
    "chai": "^4.2.0",
    "codemirror": "^6.0.1",
    "mitata": "^1.0.21",
    "mocha": "^10.0.0",
    "peggy": "^2.0.1",
    "punycode": "^2.1.1",
    "typescript": "^5.8.3",
    "vite": "^7.2.6"
  },
  "name": "dropflow",
  "version": "0.6.1",
  "description": "A small CSS2 document renderer built from specifications",
  "type": "module",
  "files": [
    "assets/images",
    "dist/gen",
    "dist/dropflow.wasm",
    "dist/src"
  ],
  "exports": {
    ".": {
      "typescript": "./src/api.ts",
      "default": "./dist/src/api.js"
    },
    "./parse.js": {
      "typescript": "./src/api-parse.ts",
      "default": "./dist/src/api-parse.js"
    },
    "./register-noto-fonts.js": {
      "typescript": "./src/api-register-noto-fonts.ts",
      "default": "./dist/src/api-register-noto-fonts.js"
    },
    "./environment.js": {
      "typescript": "./src/environment.ts",
      "default": "./dist/src/environment.js"
    },
    "./dropflow.wasm": "./dist/dropflow.wasm"
  },
  "imports": {
    "#register-default-environment": {
      "browser": {
        "typescript": "./src/environment-browser.ts",
        "default": "./dist/src/environment-browser.js"
      },
      "default": {
        "typescript": "./src/environment-node.ts",
        "default": "./dist/src/environment-node.js"
      }
    },
    "#assets/*": "./assets/*"
  },
  "scripts": {
    "test": "node tools/run-ts mocha test/ci.js",
    "test:watch": "node tools/run-ts mocha test/ci.js -- --watch --parallel",
    "test:dist": "mocha dist/test/ci.js",
    "tsc": "tsc",
    "playground": "vite -c site/vite.config.js",
    "buildcssparser": "peggy --format es src/parse-css.pegjs"
  },
  "keywords": [
    "css2",
    "css",
    "html",
    "browser",
    "ua"
  ],
  "author": "Caleb Hearon <caleb@chearon.net>",
  "license": "MIT"
}
